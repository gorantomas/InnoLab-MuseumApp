            android:layout_height="wrap_content"
            android:text="It's a PopupWindow" />

        <ImageView
            android:id="@+id/imageViewPopUp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/imgersterstock" />
